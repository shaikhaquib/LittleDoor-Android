<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lilCat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    app:carbon_cornerRadius="@dimen/_8_dp"
    app:carbon_strokeWidth="@dimen/_1dp"
    android:padding="@dimen/_4_dp"
    android:layout_marginHorizontal="@dimen/_8_dp"
    android:orientation="vertical">

    <carbon.widget.ImageView
        android:id="@+id/imgIcon"
        style="@style/AppEditTextCarbonElevated"
        app:carbon_elevation="2dp"
        android:layout_width="@dimen/_68_dp"
        android:layout_height="@dimen/_68_dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        app:carbon_strokeWidth="@dimen/_1dp"
        app:carbon_stroke="@color/grey_lighter"
        android:padding="@dimen/_12_dp"
        android:src="@drawable/cardiologist" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtName"
        style="@style/TextGray_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Therapist" />

</carbon.widget.LinearLayout>

